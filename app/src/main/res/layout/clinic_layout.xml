<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F3F2C9">

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="Выберите поликлинику"
            android:id="@+id/titleTextView"
            android:layout_column="0"
            android:layout_weight="3"
            android:background="#93AF56"
            android:gravity="center"
            android:textSize="20dp" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Назад"
            android:id="@+id/backToRegionButton"
            android:layout_column="3"
            android:layout_weight="1"
            android:background="#336371"
            android:onClick="backToRegion" />
    </LinearLayout>

    <ListView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/clinicListView"
        android:dividerHeight="0dp"
        android:background="#F3F2C9"
        android:divider="#F3F2C9"
        android:footerDividersEnabled="false"
        android:foregroundGravity="center"
        android:textAlignment="center"
        android:touchscreenBlocksFocus="false"
        android:scrollIndicators="right" />


</LinearLayout>