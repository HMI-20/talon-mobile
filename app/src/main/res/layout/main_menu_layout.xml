<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F3F2C9">

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#336371">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="Выберите действие"
            android:id="@+id/textView2"
            android:layout_column="0"
            android:background="#93AF56"
            android:gravity="center"
            android:textSize="20dp"
            android:layout_weight="3" />

        <ImageView
            android:layout_width="48dp"
            android:layout_height="wrap_content"
            android:id="@+id/imageView"
            android:background="@drawable/logout"
            android:onClick="logout"
            android:nestedScrollingEnabled="false" />

    </LinearLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:id="@+id/textView4"
        android:layout_gravity="center_horizontal" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:id="@+id/statusTextView"
        android:layout_gravity="center_horizontal" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:id="@+id/textView6"
        android:layout_gravity="center_horizontal" />

    <Button style="@style/btn_margin_color"
        android:text="Заказать талон"
        android:id="@+id/orderTicketButton"
        android:onClick="selectSpeciality" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:id="@+id/textView7"
        android:layout_gravity="center_horizontal" />

    <Button style="@style/btn_margin_color"
        android:text="Вызвать врача"
        android:id="@+id/callDoctorButton"
        android:onClick="selectSpeciality" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:id="@+id/textView8"
        android:layout_gravity="center_horizontal" />

    <Button style="@style/btn_margin_color"
        android:text="История"
        android:id="@+id/historyButton"
        android:onClick="openHistory" />

</LinearLayout>